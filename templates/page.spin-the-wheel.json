et gradient = `conic-gradient(`;\n  offers.forEach((o, i) => {\n    gradient += `${o.color} ${i * 90}deg ${(i + 1) * 90}deg`;\n    if(i < offers.length - 1) gradient += `, `;\n  });\n  gradient += `)`;\n  wheelEl.style.background = gradient;\n\n  // 2. Draw Text Labels\n  offers.forEach((o, i) => {\n    const text = document.createElement('div');\n    text.innerText = o.short;\n    text.style.position = 'absolute';\n    text.style.top = '50%'; text.style.left = '50%';\n    text.style.color = 'white'; text.style.fontWeight = 'bold'; text.style.textTransform = 'uppercase';\n    text.style.textAlign = 'center'; text.style.width = '120px';\n    text.style.textShadow = '0 1px 3px rgba(0,0,0,0.4)';\n    \n    // Rotate to middle of wedge (i*90 + 45) and push out\n    const angle = (i * 90) + 45;\n    text.style.transform = `rotate(${angle}deg) translate(0, -110px) rotate(-${angle}deg) translate(-50%, -50%)`;\n    wheelEl.appendChild(text);\n  });\n\n  // 3. Check History (If they reload, show popup immediately)\n  const savedPrizeIndex = localStorage.getItem('spin_prize_index');\n  if (savedPrizeIndex !== null) {\n    showPostSpinState(savedPrizeIndex); // Hide form\n    setTimeout(() => { openPrizeModal(); }, 500); // Show popup\n  }\n\n  // --- HANDLERS ---\n\n  function handleSpinClick() {\n    const emailInput = document.getElementById('spin-email-input');\n    const email = emailInput.value;\n    const btn = document.getElementById('spin-trigger-btn');\n    const errorMsg = document.getElementById('spin-error-msg');\n\n    // Basic Validation\n    if (!email || !email.includes('@') || !email.includes('.')) {\n      errorMsg.style.display = 'block';\n      return;\n    }\n    errorMsg.style.display = 'none';\n\n    // 1. Lock UI\n    btn.disabled = true;\n    btn.innerText = \"SPINNING...\";\n\n    // 2. Decide Winner (Random 0-3)\n    const winnerIndex = Math.floor(Math.random() * offers.length);\n    \n    // 3. Save to Storage IMMEDIATELY\n    localStorage.setItem(