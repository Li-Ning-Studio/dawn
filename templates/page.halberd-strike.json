ct';\n      var mediaFine = window.matchMedia && window.matchMedia('(pointer: fine)').matches;\n      var motionOK = !window.matchMedia || !window.matchMedia('(prefers-reduced-motion: reduce)').matches;\n      if (!mediaFine || !motionOK) return;\n      var shoe = document.querySelector('.hs .hs-shoe');\n      if (!shoe) return;\n      document.addEventListener('mousemove', function (e) {\n        var r = shoe.getBoundingClientRect();\n        var cx = r.left + r.width / 2, cy = r.top + r.height / 2;\n        var dx = (e.clientX - cx) / 35, dy = (e.clientY - cy) / 35;\n        shoe.style.transform = 'translate3d(' + dx + 'px,' + dy + 'px,0)';\n      }, { passive: true });\n    })();\n  </script>\n</section>",
