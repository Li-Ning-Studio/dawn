{% assign external_sitemap = 'https://sitemap.lining.studio/sitemap-index.xml' %}
{%- if request.host contains 'hndrd.co' -%}
  {% assign external_sitemap = 'https://sitemap.hndrd.co/sitemap-index.xml' %}
{%- endif -%}

{% for group in robots.default_groups %}
  {{- group.user_agent -}}
  {% for rule in group.rules %}
    {{- rule -}}
  {% endfor %}
  {%- if group.sitemap != blank -%}
    Sitemap: {{ external_sitemap }}
  {%- endif -%}
{% endfor %}
