{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} isolate gradient">
  <div class="section-{{ section.id }}-padding">
    <slider-component class="slider-mobile-gutter" style="--desktop-margin-left-first-item: 0;">
      <div class="page-width recs-slider__header">
        <h2 class="related-products__heading inline-richtext h2">
          {{ section.settings.title }}
        </h2>
        <div class="recs-slider__controls">
          <button
            type="button"
            class="slider-button recs-slider__btn recs-slider__btn--prev"
            name="previous"
            aria-label="{{ 'general.slider.previous_slide' | t }}"
          >
            <span class="svg-wrapper">{{ 'icon-arrow.svg' | inline_asset_content }}</span>
          </button>
          <button
            type="button"
            class="slider-button recs-slider__btn recs-slider__btn--next"
            name="next"
            aria-label="{{ 'general.slider.next_slide' | t }}"
          >
            <span class="svg-wrapper">{{ 'icon-arrow.svg' | inline_asset_content }}</span>
          </button>
        </div>
      </div>
      <ul
        id="Slider-{{ section.id }}"
        data-id="{{ section.id }}"
        class="grid product-grid contains-card contains-card--product slider slider--everywhere grid--peek recs-slider swipeable-recs page-width"
        role="list"
        aria-label="{{ 'general.slider.name' | t }}"
      >
        {% assign skip_card_product_styles = false %}
        {%- for product in section.settings.products -%}
          <li id="Slide-{{ section.id }}-{{ forloop.index }}" class="grid__item slider__slide">
            {% render 'card-product',
              card_product: product,
              media_aspect_ratio: 'adapt',
              image_shape: 'default',
              show_secondary_image: false,
              show_rating: false,
              skip_styles: skip_card_product_styles,
              section_id: section.id
            %}
          </li>
          {% assign skip_card_product_styles = true %}
          {% if section.settings.show_color_variants == true %}
            {% assign colors_seen = '' | split: ',' %}
            {% assign first_color = product.variants.first.options.first | downcase %}
            {% assign colors_seen = colors_seen | append: first_color %}
            {%- for variant in product.variants -%}
              {%- assign current_color = variant.options.first | downcase -%}
              {%- unless colors_seen contains current_color -%}
                {%- if variant.available == true -%}
                  {% assign colors_seen = colors_seen | append: current_color %}
                  <li id="Slide-{{ section.id }}-{{ forloop.index0 | plus: 1000 }}" class="grid__item slider__slide">
                    {% render 'card-product',
                      card_product: product,
                      card_variant: variant,
                      media_aspect_ratio: 'adapt',
                      image_shape: 'default',
                      show_secondary_image: false,
                      show_rating: false,
                      skip_styles: skip_card_product_styles,
                      section_id: section.id
                    %}
                  </li>
                {%- endif -%}
              {%- endunless -%}
            {%- endfor -%}
          {% endif %}
        {%- endfor -%}
      </ul>
    </slider-component>
  </div>
</div>

{% schema %}
{
  "name": "Swipeable Products",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "Swipeable Products",
      "label": "Title"
    },
    {
      "type": "product_list",
      "id": "products",
      "label": "Products",
      "limit": 15
    },
    {
      "type": "checkbox",
      "id": "show_color_variants",
      "label": "Show Color Variants",
      "default": false,
      "info": "When enabled, each color variant will be shown as a separate product card."
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Swipeable Products",
      "settings": {
        "title": "Swipeable Products"
      }
    }
  ]
}
{% endschema %}
