<section class="hero-component">
  {% if section.settings.image != blank %}
    <a href="{{ section.settings.button_link }}" class="hero-component__image-container">
      {% if section.settings.mobile_image != blank %}
        {% assign fetch_priority = 'auto' %}
        {% assign loading = 'lazy' %}
        {% if section.index0 == 0 %}
          {% assign fetch_priority = 'high' %}
          {% assign loading = 'eager' %}
        {% endif %}
        <picture>
          <source
            media="(max-width: 768px)"
            srcset="{{ section.settings.mobile_image | image_url: width: 768, height: 1024 }}"
          >
          <source
            media="(min-width: 769px)"
            srcset="{{ section.settings.image | image_url: width: 1500, height: 750 }}"
          >
          {{
            section.settings.image
            | image_url: width: 1500
            | image_tag:
              class: 'hero-component__image',
              sizes: '100vw',
              width: section.settings.image.width,
              height: section.settings.image.height,
              loading: loading,
              fetchpriority: fetch_priority
          }}
        </picture>
      {% else %}
        {{
          section.settings.image
          | image_url: width: 1500, height: 750
          | image_tag:
            class: 'hero-component__image',
            sizes: '100vw',
            width: section.settings.image.width,
            height: section.settings.image.height,
            loading: loading,
            fetchpriority: fetch_priority
        }}
      {% endif %}
    </a>
  {% endif %}

  <div class="hero-component__content-container">
    <div class="hero-component__content">
      {% if section.settings.subtitle != blank %}
        <h3 style="font-size: 1.1rem; margin-top: 2rem; color: var(--gray-50)">{{ section.settings.subtitle }}</h3>
      {% endif %}

      {% if section.settings.title != blank %}
        <h2 class="hero-component__title">{{ section.settings.title }}</h2>
      {% endif %}

      {% if section.settings.description != blank %}
        <p class="hero-component__description">{{ section.settings.description }}</p>
      {% endif %}

      {% if section.settings.button_text != blank %}
        <a
          style="padding: 2.5rem 4rem;"
          href="{{ section.settings.button_link }}"
          class="button button--secondary"
        >
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .hero-component {
    width: 100%;
    margin: 0;
    padding: 0;
    position: relative;
  }

  .hero-component__image-container {
    width: 100%;
    margin: 0;
    padding: 0;
    overflow: hidden;
  }

  .hero-component__image {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .hero-component__content-container {
    width: 100%;
  }

  .hero-component__content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    text-align: center;
  }

  .hero-component__title {
    font-size: 5rem;
    margin: 0;
    margin-top: -0.5rem;
    font-weight: 800;
    letter-spacing: -1px;
    text-transform: uppercase;
  }

  .hero-component__description {
    font-size: 1.8rem;
    margin: 1.4rem 0 2.8rem 0;
    line-height: 1.5;
    color: var(--gray-50);
  }

  .hero-component__button {
    display: inline-block;
    padding: 12px 24px;
    background-color: #000;
    color: #fff;
    text-decoration: none;
    border-radius: 30px;
    font-weight: bold;
    transition: background-color 0.3s;
  }

  .hero-component__button:hover {
    background-color: #333;
  }

  @media (max-width: 768px) {
    .hero-component__title {
      font-size: 3rem;
    }
  }
</style>

{% schema %}
{
  "name": "Hero Component",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Sub Title",
      "info": "Small text that appears above the Title",
      "default": "Prnx"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Prnx"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "Prnx"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Prnx"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/"
    }
  ],
  "presets": [
    {
      "name": "Hero Component",
      "settings": {
        "title": "PHOTON LIKE MOVEMENTS",
        "description": "Own the court with a limited edition that delivers precise control and premium build quality",
        "button_text": "BEND YOUR OPPONENT"
      }
    }
  ]
}
{% endschema %}
